vendors = official
stroke-width = 0.33%
stroke-length = 1%

svg
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100
  box-sizing: border-box
  padding: 0

path.dbs
  fill: url(#diagonalHatch)
  stroke: black
  stroke-width: 1px
  vector-effect: non-scaling-stroke
  fill-rule: evenodd
  stroke-linejoin: round

  &:hover
    fill: magenta
    stroke-dasharray: stroke-length
    animation: dash 1s linear infinite

  &:first-of-type
    fill: url(#antiDiagonalHatch)

    &:hover
      fill: lime

pattern rect
  stroke: none

#diagonalHatch
  stroke: black
  fill: silver

@keyframes dash
  from
    stroke-dashoffset: 0%
  to
    stroke-dashoffset: -2 * stroke-length
