vendors = official
stroke-width = 0.16%
stroke-length = 1%
body
  margin: 0

svg
  box-sizing: border-box

path
  fill: green
  stroke: yellow
  stroke-width: stroke-width
  fill-rule: nonzero
  stroke-linejoin: round

  &:hover
    fill: lime
    stroke-dasharray: stroke-length
    animation: dash 1s linear infinite

  &:first-child
    fill: navy

    &:hover
      fill: blue

@keyframes dash
  from
    stroke-dashoffset: 0%
  to
    stroke-dashoffset: -2 * stroke-length
